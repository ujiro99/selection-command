{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.11.0",
  "default_locale": "en",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/src/content_script.js"
      ]
    },
    {
      "matches": [
        "https://ujiro99.github.io/selection-command/*",
        "http://localhost:3000/*"
      ],
      "js": [
        "/src/command_hub.js"
      ]
    }
  ],
  "background": {
    "service_worker": "/src/background_script.js"
  },
  "options_page": "options_page.html",
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "action": {},
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "src/content_script.css",
        "src/command_hub.css"
      ]
    }
  ]
}
