{
  "title": "UserSettingSchema",
  "type": "object",
  "required": ["commands", "popupPlacement"],
  "properties": {
    "popupPlacement": {
      "$ref": "#/definitions/popupPlacement"
    },
    "style": {
      "type": "string",
      "default": "vertical",
      "enum": ["vertical", "horizontal"]
    },
    "commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/command"
      }
    },
    "folders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commandFolder"
      }
    },
    "pageRules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["urlPattern", "popupEnabled", "popupPlacement"],
        "additionalProperties": false,
        "properties": {
          "urlPattern": {
            "type": "string"
          },
          "popupEnabled": {
            "type": "string",
            "enum": ["Enable", "Disable"],
            "default": "Enable"
          },
          "popupPlacement": {
            "$ref": "#/definitions/popupPlacement"
          }
        }
      }
    }
  },
  "definitions": {
    "popupPlacement": {
      "type": "string",
      "default": "top-end",
      "enum": [
        "top",
        "top-start",
        "top-end",
        "bottom",
        "bottom-start",
        "bottom-end"
      ]
    },
    "command": {
      "type": "object",
      "name": "Command",
      "required": ["title", "searchUrl", "iconUrl", "openMode"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "searchUrl": {
          "type": "string"
        },
        "iconUrl": {
          "$id": "#/commands/iconUrl",
          "type": "string"
        },
        "openMode": {
          "type": "string",
          "enum": ["popup", "tab"],
          "default": "popup"
        },
        "parentFolder": {
          "$id": "#/commands/parentFolder",
          "type": "string"
        }
      }
    },
    "commandFolder": {
      "type": "object",
      "name": "Folder",
      "required": ["title"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "iconUrl": {
          "$id": "#/commandFolder/iconUrl",
          "type": "string"
        },
        "onlyIcon": {
          "name": "OnlyIcon",
          "$id": "#/commandFolder/onlyIcon",
          "type": "boolean"
        }
      }
    }
  }
}
