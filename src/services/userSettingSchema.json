{
  "title": "UserSettingSchema",
  "type": "object",
  "required": [
    "commands",
    "popupPlacement",
    "style"
  ],
  "properties": {
    "popupPlacement": {
      "$id": "#/popupPlacement",
      "$ref": "#/definitions/popupPlacement"
    },
    "style": {
      "$id": "#/style",
      "type": "string",
      "default": "vertical",
      "enum": [
        "vertical",
        "horizontal"
      ]
    },
    "commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/command"
      }
    },
    "folders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commandFolder"
      }
    },
    "pageRules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "urlPattern",
          "popupEnabled",
          "popupPlacement"
        ],
        "additionalProperties": false,
        "properties": {
          "urlPattern": {
            "type": "string"
          },
          "popupEnabled": {
            "type": "string",
            "enum": [
              "Enable",
              "Disable"
            ],
            "default": "Enable"
          },
          "popupPlacement": {
            "$ref": "#/definitions/popupPlacement"
          }
        }
      }
    }
  },
  "definitions": {
    "popupPlacement": {
      "type": "string",
      "default": "top-end",
      "enum": [
        "top",
        "top-start",
        "top-end",
        "bottom",
        "bottom-start",
        "bottom-end"
      ]
    },
    "command": {
      "type": "object",
      "name": "Command",
      "required": [
        "title",
        "iconUrl",
        "openMode"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "openMode": {
          "$id": "#/commands/openMode",
          "$ref": "#/definitions/openMode",
          "default": "popup"
        },
        "iconUrl": {
          "$id": "#/commands/iconUrl",
          "type": "string"
        },
        "parentFolder": {
          "$id": "#/commands/parentFolder",
          "$ref": "#/definitions/folderOptions"
        }
      },
      "dependencies": {
        "openMode": {
          "oneOf": [
            {
              "properties": {
                "openMode": {
                  "enum": [
                    "popup"
                  ]
                },
                "openModeSecondary": {
                  "$id": "#/commands/openModeSecondary_popup",
                  "$ref": "#/definitions/openModeSecondary",
                  "default": "tab"
                },
                "searchUrl": {
                  "type": "string"
                },
                "popupOption": {
                  "$ref": "#/definitions/popupOption"
                }
              },
              "required": [
                "searchUrl",
                "popupOption"
              ]
            },
            {
              "properties": {
                "openMode": {
                  "enum": [
                    "tab"
                  ]
                },
                "openModeSecondary": {
                  "$id": "#/commands/openModeSecondary_tab",
                  "$ref": "#/definitions/openModeSecondary",
                  "default": "tab"
                },
                "searchUrl": {
                  "type": "string"
                }
              },
              "required": [
                "searchUrl"
              ]
            },
            {
              "properties": {
                "openMode": {
                  "enum": [
                    "api"
                  ]
                },
                "fetchOptions": {
                  "$id": "#/commands/fetchOptions",
                  "type": "string"
                },
                "variables": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/commandVariable"
                  }
                }
              },
              "required": [
                "fetchOptions",
                "variables"
              ]
            },
            {
              "properties": {
                "openMode": {
                  "enum": [
                    "linkPopup"
                  ]
                },
                "title": {
                  "type": "string",
                  "default": "Link Popup"
                },
                "iconUrl": {
                  "type": "string",
                  "default": "https://cdn3.iconfinder.com/data/icons/fluent-regular-24px-vol-5/24/ic_fluent_open_24_regular-1024.png"
                }
              }
            }
          ]
        }
      }
    },
    "commandFolder": {
      "type": "object",
      "name": "Folder",
      "required": [
        "title"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "iconUrl": {
          "$id": "#/commandFolder/iconUrl",
          "type": "string"
        },
        "onlyIcon": {
          "name": "OnlyIcon",
          "$id": "#/commandFolder/onlyIcon",
          "type": "boolean"
        }
      }
    },
    "popupOption": {
      "type": "object",
      "required": [
        "width",
        "height"
      ],
      "additionalProperties": false,
      "properties": {
        "width": {
          "type": "number",
          "default": 600
        },
        "height": {
          "type": "number",
          "default": 700
        }
      }
    },
    "folderOptions": {
      "enumNames": [
        ""
      ],
      "enum": [
        {
          "id": "",
          "name": ""
        }
      ]
    },
    "openMode": {
      "type": "string",
      "enum": [
        "popup",
        "tab",
        "api",
        "linkPopup"
      ]
    },
    "openModeSecondary": {
      "type": "string",
      "enum": [
        "popup",
        "tab"
      ]
    },
    "commandVariable": {
      "type": "object",
      "name": "Variable",
      "required": [
        "name",
        "value"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}
