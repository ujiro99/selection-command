{
  "name": "selection-popup",
  "version": "0.1.0",
  "scripts": {
    "build": "cross-env NODE_ENV=production esbuild src/* --bundle --outdir=dist/src --sourcemap",
    "watch:src": "node watch.js",
    "watch:dist": "mv3-hot-reload",
    "dev": "concurrently yarn:watch:*",
    "pretty-quick": "pretty-quick",
    "precommit": "pretty-quick --staged",
    "prepare": "husky install",
    "preinstall": "cd ./lib/mv3-hot-reload && yarn install"
  },
  "author": "ujiro99",
  "license": "MIT",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version"
    ],
    "development": [
      "last 3 chrome version"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@popperjs/core": "^2.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "react-transition-group": "^4.4.5",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.256",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-transition-group": "^4.4.10",
    "@types/webextension-polyfill": "^0.10.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.11",
    "husky": "^8.0.3",
    "mv3-hot-reload": "file:lib/mv3-hot-reload",
    "prettier": "^3.1.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
