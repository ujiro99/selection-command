{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.11.9",
  "default_locale": "en",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content_script.tsx"]
    },
    {
      "matches": [
        "https://ujiro99.github.io/selection-command/*",
        "http://localhost:3000/*"
      ],
      "js": ["src/command_hub.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background_script.ts"
  },
  "options_page": "src/options_page.html",
  "action": {},
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "declarativeNetRequest",
    "clipboardRead"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "resources": ["assets/*.css", "icon128.png"]
    }
  ],
  "commands": {
    "command_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Command 1"
    },
    "command_2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Command 2"
    },
    "command_3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Command 3"
    }
  }
}
